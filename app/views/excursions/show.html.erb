<div data-role="header" data-add-back-btn="true">
 <h1><%= @excursion.name %></h1>
 	<%= link_to 'Home', posts_url, "class" => "ui-btn-right" %>

</div>
 
<div data-role="content">
	<%= @excursion.content.html_safe %>
	<div id = "excursion_photo"> <%=image_tag(@excursion.photo, :size => "250x250" )%> </div>

	<p> Located at our <%= @excursion.location %> in <%= @excursion.area %></p>
	<p>I'm interested in doing this tour on _date_ please send me more info my is _email_</p>
	
	<%= form_for @customer do |c| %>
		<%= c.date_select :tour_date , :prefix => :start_date %>
		<%#= c.text_field :tour_date%>
		<%= c.email_field :email %>
		<%= c.submit %>
	<% end %>



</div>



